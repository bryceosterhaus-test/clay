{
	"compilerOptions": {
		"noEmit": true,
		"strict": true,
		"jsx": "react",
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"removeComments": true,
		"baseUrl": "./",
		"paths": {
			"@clayui/*": ["packages/*/src"],
			"*": ["node_modules", "packages"]
		}
	},
	"awesomeTypescriptLoaderOptions": {
		"useBabel": true,
		"babelCore": "@babel/core"
	},
	"include": ["packages"],
	"exclude": ["node_modules", "packages/**/lib"]
}
